<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCard" parent="Theme.AppCompat.Light">
            <item name="colorAccent">@color/darkyellow</item>
            <item name="colorPrimary">@color/white</item>
            <item name="colorPrimaryDark">@color/white</item>
            <item name="android:windowLightStatusBar">true</item>
            <item name= "android:textColorPrimary">@color/black</item>
            <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="Theme.MyCard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyCard.Icon">
        <item name="tint">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>

    <style name="Theme.MyCard.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Theme.MyCard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyCard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>